{% extends 'base.html.twig' %}

{% block title %}Hello RestaurantController!{% endblock %}

{% block body %}
    <h1>Ajouter</h1>
    <nav>
        <ul>
            <li><a href="{{ path('app_restaurant_create') }}">Ajouter</a></li>
        </ul>
    </nav>
    <section>
        {% for restaurant in restaurants %}
            <ul>
                <li>Nom du resto : {{ restaurant.name }} </li>
                <li>Adresse du resto
                    : {{ restaurant.address.name }} {{ restaurant.address.zip }} {{ restaurant.address.city }}</li>
                <li>Info perso du restau : <a href="{{ path('app_restaurant', {"restaurant": restaurant.id}) }}">En savoir plus
                        !</a></li>
                <li><a href="{{ path('app_restaurant_update', {"restaurant": restaurant.id}) }}">Modifier</a></li>
                <li><a href="{{ path('app_restaurant_delete', {"restaurant": restaurant.id}) }}">Supprimer</a></li>
            </ul>
        {% endfor %}
    </section>
{% endblock %}
